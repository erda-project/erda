{
    "name": "磁盘Inode异常告警",
    "alert_scope": "org",
    "attributes": {
      "level": "WARNING",
      "recover": "true",
      "display_url_id": "machine_disk",
      "alert_group": "{{cluster_name}}-{{host_ip}}-{{device}}",
      "tickets_metric_key": "{{host_ip}}"
    },
    "template": {
      "metric": "disk",
      "window": 5,
      "filters": [
        {
          "tag": "cluster_name",
          "operator": "in",
          "value": ["$cluster_name"]
        }, {
          "tag": "type",
          "operator": "neq",
          "value": "netdata"
        }
      ],
      "group": [
        "host_ip",
        "device"
      ],
      "functions": [
        {
          "aggregator": "max",
          "alias": "inode_used_percent_value",
          "field": "inode_used_percent",
          "field_script": "function invoke(field, tag){ return field.inodes_used/field.inodes_total*100 }",
          "operator": "gte",
          "value": 85
        },
        {
          "aggregator": "max",
          "alias": "inodes_total_value",
          "field": "inodes_total"
        }
      ],
      "select": {
        "cluster_name": "#cluster_name",
        "host_ip": "#host_ip",
        "device": "#device",
        "_meta": "#_meta",
        "_metric_scope": "#_metric_scope",
        "_metric_scope_id": "#_metric_scope_id",
        "org_name": "#org_name",
        "labels": "#labels"
      },
      "outputs": [
        "alert"
      ]
    }
  }