{
  "name": "平台组件Flink吞吐量异常告警",
  "alert_scope": "org",
  "attributes": {
    "level": "WARNING",
    "recover": "false",
    "alert_group": "{{cluster_name}}-{{container_id}}-{{job_id}}",
    "tickets_metric_key": "{{container_id}}-{{job_id}}"
  },
  "template": {
    "metric": "flink_tm_operator",
    "window": 1,
    "filters": [
      {
        "tag": "cluster_name",
        "operator": "in",
        "value": ["$cluster_name"]
      }
    ],
    "group": [
      "cluster_name",
      "container_id",
      "job_id",
      "task_id",
      "subtask_index",
      "operator_id"
    ],
    "functions": [
      {
        "aggregator": "max",
        "alias": "numRecordsOutPerSecond_count_value",
        "field": "numRecordsOutPerSecond_count",
        "operator": "eq",
        "value": 0
      }
    ],
    "select": {
      "cluster_name": "#cluster_name",
      "host_ip": "#host_ip",
      "job_id": "#job_id",
      "tm_id": "#tm_id",
      "subtask_index": "#subtask_index",
      "operator_id": "#operator_id"
    },
    "outputs": [
      "alert"
    ]
  }
}