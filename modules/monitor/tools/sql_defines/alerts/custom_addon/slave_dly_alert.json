{
  "name": "MySQL SLAVE DELAY ALERT",
  "alert_scope": "org",
  "attributes": {
    "level": "WARNING",
    "recover": "false",
    "alert_group": "{{cluster_name}}-{{addon_id}}"
  },
  "template": {
    "metric": "mysql",
    "window": 30,
    "condition": "or",
    "filters": [
      {
        "tag": "cluster_name",
        "operator": "in",
        "value": ["$cluster_name"]
      },
      {
        "tag": "is_slave",
        "operator": "eq",
        "value": "true"
      }
    ],
    "group": [
      "addon_id",
      "server"
    ],
    "functions": [
      {
        "aggregator": "values",
        "field": "slave_slave_sql_running_state",
        "field_script": "function invoke(fields,tags){if (fields.slave_slave_sql_running_state == 'Slave has read all relay log; waiting for more updates') {return 'no delay'} return 'delay';}",
        "operator": "all",
        "value": "delay"
      },
      {
        "aggregator": "max",
        "field": "slave_seconds_behind_master",
        "operator": "gt",
        "value": 1800
      }
    ],
    "select": {
      "cluster_name": "#cluster_name",
      "addon_id": "#addon_id",
      "server_id": "#server"
    },
    "outputs": [
      "alert"
    ]
  }
}