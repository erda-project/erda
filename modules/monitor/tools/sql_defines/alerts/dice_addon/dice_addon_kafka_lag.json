{
  "name": "平台中间件kafka消费堆积",
  "alert_scope": "org",
  "attributes": {
    "level": "WARNING",
    "recover": "false",
    "display_url_id": "org_addon",
    "alert_group": "{{cluster_name}}-{{group}}-{{topic}}",
    "tickets_metric_key": "{{group}}-{{topic}}"
  },
  "template": {
    "metrics": ["kafka_consumer"],
    "window": 3,
    "filters": [
      {
        "tag": "cluster_name",
        "operator": "in",
        "value": ["$cluster_name"]
      },
      {
        "tag": "addon_id",
        "operator": "eq",
        "value": "kafka"
      }
    ],
    "group": [
      "cluster_name",
      "addon_id",
      "group",
      "topic"
    ],
    "functions": [
      {
        "aggregator": "avg",
        "field": "lag",
        "operator": "gte",
        "value": 100000
      },
      {
        "aggregator": "avg",
        "field": "consume_rate_per_sec"
      },
      {
        "aggregator": "avg",
        "field": "produce_rate_per_sec"
      }
    ],
    "select": {
      "cluster_name": "#cluster_name",
      "addon_id": "#addon_id",
      "addon_type": "#addon_type",
      "topic": "#topic",
      "group": "#group",
      "_meta": "#_meta",
      "_metric_scope": "#_metric_scope",
      "_metric_scope_id": "#_metric_scope_id",
      "org_name": "#org_name"
    },
    "outputs": [
      "alert"
    ]
  }
}
