{
  "name": "应用错误次数",
  "alert_scope": "micro_service",
  "attributes": {
    "level": "WARNING",
    "recover": "true",
    "display_url_id": "micro_error_detail",
    "alert_group": "{{terminus_key}}-{{error_id}}",
    "tickets_metric_key": "{{error_id}}"
  },
  "template": {
    "metric": "error_alert",
    "window": 5,
    "filters": [
      {
        "tag": "terminus_key",
        "operator": "eq",
        "value": "$terminus_key"
      },
      {
        "tag": "application_id",
        "operator": "in",
        "value": ["$application_id"]
      }
    ],
    "group": [
      "error_id"
    ],
    "functions": [
      {
        "aggregator": "sum",
        "field": "count",
        "operator": "gte",
        "value": 20
      }
    ],
    "select": {
      "cluster_name": "#cluster_name",
      "host_ip": "#host_ip",
      "service_name": "#service_name",
      "project_name": "#project_name",
      "application_name": "#application_name",
      "runtime_name": "#runtime_name",
      "application_id": "#application_id",
      "project_id": "#project_id",
      "runtime_id": "#runtime_id",
      "terminus_key": "#terminus_key",
      "instance_id": "#instance_id",
      "type": "#type",
      "workspace": "#workspace",
      "class": "#class",
      "line": "#line",
      "method": "#method",
      "error_id": "#error_id"
    },
    "outputs": [
      "alert"
    ]
  }
}