### 删除 alert
DELETE {{url}}/api/alerts/<id>


### 应用错误次数
# @ app_exception/app_exception_count
POST {{url}}/api/alerts
Content-Type: application/json

{
	"alertScope": "micro_service",
	"alertScopeId": "xxxx",
	"clusterName": "terminus-dev",
	"enable": true,
	"name": "应用错误次数",
	"notifies": [
		{
			"groupId": 1,
			"groupType": "dingding",
			"type": "notify_group"
		}
	],
	"rules": [
		{
			"alertIndex": "app_exception_count",
			"functions": [
				{
					"aggregator": "sum",
					"field": "count",
					"operator": "gte",
					"value": 20
				}
			],
			"window": 5
		}
	]
}

