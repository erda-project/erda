{
  "name": "机器磁盘",
  "alert_scope": "org",
  "attributes": {
    "level": "WARNING",
    "recover": "true",
    "display_url_id": "machine_disk",
    "alert_group": "{{cluster_name}}-{{host_ip}}-{{device}}",
    "tickets_metric_key": "{{host_ip}}"
  },
  "template": {
    "metric": "disk",
    "window": 5,
    "filters": [
      {
        "tag": "cluster_name",
        "operator": "in",
        "value": ["$cluster_name"]
      }, {
        "tag": "type",
        "operator": "neq",
        "value": "netdata"
      }
    ],
    "group": [
      "host_ip",
      "device"
    ],
    "functions": [
      {
        "aggregator": "max",
        "alias": "used_percent_value",
        "field": "used_percent",
        "operator": "gte",
        "value": 86
      }, {
        "aggregator": "max",
        "alias": "total_value",
        "field": "total"
      }
    ],
    "select": {
      "cluster_name": "#cluster_name",
      "host_ip": "#host_ip",
      "device": "#device",
      "_meta": "#_meta",
      "_metric_scope": "#_metric_scope",
      "_metric_scope_id": "#_metric_scope_id",
      "org_name": "#org_name",
      "labels": "#labels"
    },
    "outputs": [
      "alert"
    ]
  }
}