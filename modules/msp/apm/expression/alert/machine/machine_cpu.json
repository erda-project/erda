{
  "name": "机器CPU",
  "alert_scope": "org",
  "attributes": {
    "level": "WARNING",
    "recover": "true",
    "display_url_id": "machine_cpu",
    "alert_group": "{{cluster_name}}-{{host_ip}}",
    "tickets_metric_key": "{{host_ip}}"
  },
  "template": {
    "metric": "host_summary",
    "window": 5,
    "filters": [
      {
        "tag": "cluster_name",
        "operator": "in",
        "value": ["$cluster_name"]
      }
    ],
    "group": [
      "cluster_name",
      "host_ip"
    ],
    "functions": [
      {
        "aggregator": "avg",
        "field": "cpu_usage_active",
        "operator": "gte",
        "value": 95
      }
    ],
    "select": {
      "cluster_name": "#cluster_name",
      "host_ip": "#host_ip",
      "_meta": "#_meta",
      "_metric_scope": "#_metric_scope",
      "_metric_scope_id": "#_metric_scope_id",
      "org_name": "#org_name",
      "labels": "#labels"
    },
    "outputs": [
      "alert"
    ]
  }
}