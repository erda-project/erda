{
  "index_patterns": [
    "${ERDA_EVENT_INDEX_PREFIX:erda-events-}*"
  ],
  "settings": {
    "number_of_shards": ${EVENT_INDEX_SHARDS:5},
    "number_of_replicas": ${EVENT_INDEX_REPLICAS:1},
    "index": {
      "refresh_interval": "15s",
      "translog.durability": "async",
      "translog.sync_interval": "15s",
      "translog.flush_threshold_size": "1024mb"
    }
  },
  "mappings": {
    "events": {
      "dynamic": "true",
      "properties": {
        "event_id": {
          "type": "text",
          "fields": {
            "raw": {
              "type": "keyword"
            }
          }
        },
        "request_id": {
          "type": "text",
          "fields": {
            "raw": {
              "type": "keyword"
            }
          }
        },
        "error_id": {
          "type": "text",
          "fields": {
            "raw": {
              "type": "keyword"
            }
          }
        },
        "timestamp": {
          "type": "date"
        },
        "tags": {
          "type": "object"
        },
        "meta_data": {
          "type": "object"
        },
        "request_context": {
          "type": "object"
        },
        "request_headers": {
          "type": "object"
        }
      }
    }
  }
}