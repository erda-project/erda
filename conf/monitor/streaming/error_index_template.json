{
  "index_patterns": [
    "${ERDA_ERROR_INDEX_PREFIX:erda-errors-}*"
  ],
  "settings": {
    "number_of_shards": ${ERROR_INDEX_SHARDS: 5},
    "number_of_replicas": ${ERROR_INDEX_REPLICAS: 1},
    "index": {
      "refresh_interval": "15s",
      "translog.durability": "async",
      "translog.sync_interval": "15s",
      "translog.flush_threshold_size": "1024mb"
    }
  },
  "mappings": {
    "errors": {
      "dynamic": "true",
      "properties": {
        "terminus_key": {
          "type": "text",
          "fields": {
            "raw": {
              "type": "keyword"
            }
          }
        },
        "application_id": {
          "type": "text",
          "fields": {
            "raw": {
              "type": "keyword"
            }
          }
        },
        "service_name": {
          "type": "text",
          "fields": {
            "raw": {
              "type": "keyword"
            }
          }
        },
        "error_id": {
          "type": "text",
          "fields": {
            "raw": {
              "type": "keyword"
            }
          }
        },
        "timestamp": {
          "type": "date"
        },
        "tags": {
          "type": "object"
        }
      }
    }
  }
}