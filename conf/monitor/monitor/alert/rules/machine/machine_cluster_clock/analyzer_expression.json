{
  "id":"machine_cluster_clock",
  "expression":{
    "filters":[
      {
        "operator":"eq",
        "tag":"org_name",
        "value":"$org_name"
      }
    ],
    "functions":[
      {
        "aggregator":"avg",
        "field":"elapsed_abs",
        "operator":"gte",
        "value":5000
      },
      {
        "aggregator":"avg",
        "alias":"send_timestamp",
        "field":"send_timestamp"
      },
      {
        "aggregator":"avg",
        "alias":"receive_timestamp",
        "field":"receive_timestamp"
      }
    ],
    "group":[
      "cluster_name",
      "host_ip"
    ],
    "metric":"cluster_clock",
    "outputs":[
      "alert"
    ],
    "select":{
      "_meta":"#_meta",
      "_metric_scope":"#_metric_scope",
      "_metric_scope_id":"#_metric_scope_id",
      "cluster_name":"#cluster_name",
      "host_ip":"#host_ip",
      "labels":"#labels",
      "org_name":"#org_name",
      "source_host_ip":"#source_host_ip"
    },
    "window":5
  }
}
