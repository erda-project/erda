{
  "id":"slave_dly_alert",
  "expression":{
    "condition":"or",
    "filters":[
      {
        "operator":"eq",
        "tag":"org_name",
        "value":"$org_name"
      },
      {
        "operator":"eq",
        "tag":"is_slave",
        "value":"true"
      }
    ],
    "functions":[
      {
        "aggregator":"values",
        "field":"slave_slave_sql_running_state",
        "field_script":"function invoke(fields,tags){if (fields.slave_slave_sql_running_state == 'Slave has read all relay log; waiting for more updates') {return 'no delay'} return 'delay';}",
        "operator":"all",
        "value":"delay"
      },
      {
        "aggregator":"max",
        "field":"slave_seconds_behind_master",
        "operator":"gt",
        "value":1800
      }
    ],
    "group":[
      "addon_id",
      "server"
    ],
    "metric":"mysql",
    "outputs":[
      "alert"
    ],
    "select":{
      "addon_id":"#addon_id",
      "cluster_name":"#cluster_name",
      "org_name":"#org_name",
      "server_id":"#server"
    },
    "window":30
  }
}
