{
  "name": "应用实例内存使用率异常",
  "alert_scope": "micro_service",
  "attributes": {
    "level": "Warning",
    "recover": "true",
    "display_url_id": "workbench_runtime",
    "alert_group": "{{terminus_key}}-{{container_id}}",
    "tickets_metric_key": "{{container_id}}"
  },
  "template": {
    "metric": "docker_container_summary",
    "window": 1,
    "filters": [
      {
        "tag": "org_name",
        "operator": "eq",
        "value": "$org_name"
      },
      {
        "tag": "terminus_key",
        "operator": "eq",
        "value": "$terminus_key"
      }
    ],
    "group": [
      "container_id"
    ],
    "functions": [
      {
        "aggregator": "avg",
        "field": "mem_usage_percent",
        "operator": "gte",
        "value": 90
      },
      {
        "aggregator": "max",
        "alias": "mem_usage_value",
        "field": "mem_usage"
      },
      {
        "aggregator": "max",
        "alias": "mem_limit_value",
        "field": "mem_limit"
      },
      {
        "aggregator": "max",
        "alias": "mem_max_usage_value",
        "field": "mem_max_usage"
      }
    ],
    "select": {
      "cluster_name": "#cluster_name",
      "host_ip": "#host_ip",
      "container_id": "#container_id",
      "service_name": "#service_name",
      "project_name": "#project_name",
      "application_name": "#application_name",
      "runtime_name": "#runtime_name",
      "application_id": "#application_id",
      "project_id": "#project_id",
      "runtime_id": "#runtime_id",
      "terminus_key": "#terminus_key",
      "instance_id": "#instance_id",
      "pod_ip": "#pod_ip",
      "org_name": "#org_name"
    },
    "outputs": [
      "alert"
    ]
  }
}
