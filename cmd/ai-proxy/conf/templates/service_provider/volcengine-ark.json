{
  "volcengine-ark": {
    "placeholders": [
      {
        "name": "api-key",
        "type": "string",
        "required": true
      },
      {
        "name": "another-api-key",
        "type": "string",
        "default": "",
        "required": false
      }
    ],
    "desc": "Volcengine Ark",
    "config": {
      "type": "${@template.name}",
      "desc": "${@template.desc}",
      "apiKey": "${@template.placeholders.api-key}",
      "metadata": {
        "public": {
          "api": {
            "apiStyle": "openai-compatible",
            "apiStyleConfigs": {
              "*:*": {
                "headers": {
                  "Authorization": [
                    "Set",
                    "Bearer ${@provider.apiKey}"
                  ]
                },
                "host": "ark.cn-beijing.volces.com",
                "path": [
                  "replace",
                  "/v1",
                  "/api/v3"
                ]
              },
              "*:/v1/audio/speech": {
                "headers": {
                  "x-api-app-id": [
                    "set",
                    "${@model.metadata.secret.app_id}"
                  ],
                  "x-api-access-key": [
                    "set",
                    "${@model.metadata.secret.access_key}"
                  ],
                  "x-api-resource-id": [
                    "set",
                    "${@model.metadata.public.model_name}"
                  ],
                  "authorization": [
                    "delete"
                  ]
                },
                "host": "openspeech.bytedance.com",
                "path": [
                  "set",
                  "/api/v3/tts/submit"
                ],
                "scheme": "https"
              }
            }
          },
          "location": "cn"
        },
        "secret": {
          "anotherApiKey": "${@template.placeholders.another-api-key}"
        }
      }
    }
  }
}
