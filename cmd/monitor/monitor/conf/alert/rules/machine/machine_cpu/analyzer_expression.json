{
  "id":"machine_cpu",
  "expression":{
    "filters":[
      {
        "operator":"eq",
        "tag":"org_name",
        "value":"$org_name"
      }
    ],
    "functions":[
      {
        "aggregator":"avg",
        "field":"cpu_usage_active",
        "operator":"gte",
        "value":95
      }
    ],
    "group":[
      "cluster_name",
      "host_ip"
    ],
    "metric":"host_summary",
    "outputs":[
      "alert"
    ],
    "select":{
      "_meta":"#_meta",
      "_metric_scope":"#_metric_scope",
      "_metric_scope_id":"#_metric_scope_id",
      "cluster_name":"#cluster_name",
      "host_ip":"#host_ip",
      "labels":"#labels",
      "org_name":"#org_name"
    },
    "window":5
  }
}
